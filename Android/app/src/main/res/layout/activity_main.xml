<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <ProgressBar
        android:id="@+id/barTemp"
        style="?android:attr/progressBarStyle"
        android:layout_width="131dp"
        android:layout_height="118dp"
        android:layout_marginEnd="56dp"
        android:indeterminateTint="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/barHumi"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="130dp" />

        <ProgressBar
            android:id="@+id/barHumi"
            style="?android:attr/progressBarStyle"
            android:layout_width="131dp"
            android:layout_height="118dp"
            android:layout_marginStart="60dp"
            android:indeterminateTint="#0575FF"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="130dp" />

        <TextView
        android:id="@+id/txtHumi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Nhiệt độ"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/barHumi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="67dp" />

    <TextView
        android:id="@+id/txtTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="36dp"
        android:text="Độ ẩm"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/barTemp"
        app:layout_constraintStart_toEndOf="@+id/txtHumi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </RelativeLayout>

</LinearLayout>