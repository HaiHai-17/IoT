    <solid android:color="@android:color/transparent" />
    <stroke
        android:width="2dp"
        android:color="#000000"
        android:shadowColor="#88000000"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"

        />
