<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:id="@+id/themeLayout"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/sl1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/rounded_center_layout">

        <TextView
            android:id="@+id/txtHumi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Nhiệt Độ"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <com.github.lzyzsd.circleprogress.CircleProgress
            android:id="@+id/barHumi"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/txtHumi"
            android:layout_centerHorizontal="true"
            custom:circle_progress="37"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sl2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/sl1"
        android:background="@drawable/rounded_center_layout"

        >

        <TextView
            android:id="@+id/txtTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Độ Ẩm"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <com.github.lzyzsd.circleprogress.CircleProgress
            android:id="@+id/barTemp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/txtTemp"
            android:layout_centerHorizontal="true"
            custom:circle_progress="79"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sl3"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/sl1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_center_layout"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtPump1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Máy Bơm 1"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgPump1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPump1"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/pumpnocolor" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sl4"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/sl1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/sl1"
        android:background="@drawable/rounded_center_layout"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtPump2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Máy Bơm 2"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgPump2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPump2"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/pumpnocolor" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sl5"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/sl3"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_center_layout"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtRain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Mưa"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgRain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtRain"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/rain_day" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sl6"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/sl3"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/sl1"
        android:background="@drawable/rounded_center_layout"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtHuman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Người"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgHuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHuman"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/nohuman" />
    </RelativeLayout>


</RelativeLayout>